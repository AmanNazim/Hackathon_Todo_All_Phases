# Phase III AI Chatbot Backend - Environment Variables

# App Configuration
APP_NAME=Phase III AI Chatbot
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/chatbot_db

# LLM Configuration (LiteLLM)
# Supports 100+ providers: OpenAI, Anthropic, Google, Azure, AWS, etc.
# Format: "provider/model-name"
# Examples:
#   OpenAI: "openai/gpt-4o-mini" or "openai/gpt-4"
#   Anthropic: "anthropic/claude-3-5-sonnet-20240620"
#   Google: "gemini/gemini-pro"
#   Azure: "azure/gpt-4"
#   Ollama (local): "ollama/llama2"
LLM_MODEL=openai/gpt-4o-mini
LLM_API_KEY=your-api-key-here

# Legacy OpenAI Configuration (optional, for backward compatibility)
# OPENAI_API_KEY=your-openai-api-key
# OPENAI_MODEL=gpt-4o-mini

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]
