{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Console UI Components Schema",
  "description": "Schema for the components defined in the Console UI Skill",
  "type": "object",
  "properties": {
    "environment": {
      "type": "object",
      "description": "Environment detection and configuration",
      "properties": {
        "no_color": {
          "type": "boolean",
          "description": "Whether to respect NO_COLOR environment variable"
        },
        "is_tty": {
          "type": "boolean",
          "description": "Whether output is going to a TTY"
        },
        "term": {
          "type": "string",
          "description": "TERM environment variable value"
        },
        "use_colors": {
          "type": "boolean",
          "description": "Whether to use color formatting"
        },
        "use_animation": {
          "type": "boolean",
          "description": "Whether to use animations"
        }
      },
      "required": ["no_color", "is_tty", "term", "use_colors", "use_animation"]
    },
    "colors": {
      "type": "object",
      "description": "Color formatting configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether color formatting is enabled"
        },
        "palette": {
          "type": "object",
          "description": "Color definitions",
          "properties": {
            "success": { "type": "string" },
            "warning": { "type": "string" },
            "error": { "type": "string" },
            "info": { "type": "string" },
            "primary": { "type": "string" },
            "secondary": { "type": "string" }
          }
        }
      },
      "required": ["enabled", "palette"]
    },
    "components": {
      "type": "object",
      "description": "Available UI components",
      "properties": {
        "header": {
          "type": "object",
          "description": "Header component configuration",
          "properties": {
            "type": { "type": "string", "enum": ["function"] },
            "parameters": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "alert": {
          "type": "object",
          "description": "Alert component configuration",
          "properties": {
            "success": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["function"] },
                "parameters": { "type": "array", "items": { "type": "string" } }
              }
            },
            "warning": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["function"] },
                "parameters": { "type": "array", "items": { "type": "string" } }
              }
            },
            "error": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["function"] },
                "parameters": { "type": "array", "items": { "type": "string" } }
              }
            },
            "info": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["function"] },
                "parameters": { "type": "array", "items": { "type": "string" } }
              }
            }
          }
        },
        "interactive": {
          "type": "object",
          "description": "Interactive components",
          "properties": {
            "spinner": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["function"] },
                "parameters": { "type": "array", "items": { "type": "string" } }
              }
            },
            "progress_bar": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["function"] }
              }
            },
            "prompt": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["function"] }
              }
            }
          }
        }
      }
    }
  },
  "required": ["environment", "colors", "components"]
}